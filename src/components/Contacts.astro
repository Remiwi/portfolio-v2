---
import Image from "astro/components/Image.astro";
import GithubIcon from "@assets/icons/github.png";
import LinkedInIcon from "@assets/icons/linkedin.png";
import EmailIcon from "@assets/icons/email.png";

type Props = {
  class?: string;
};
---

<div class={Astro.props.class}>
  <div class="flex flex-row items-center justify-center gap-1">
    <Image
      src={GithubIcon}
      alt="Github Icon"
      width={100}
      height={100}
      class="h-6 w-6 dark:brightness-200 dark:invert"
    />
    <a href="https://github.com/Remiwi">GitHub</a>
  </div>
  <div class="flex flex-row items-center justify-center gap-1">
    <Image
      src={LinkedInIcon}
      alt="LinkedIn Icon"
      width={100}
      height={100}
      class="h-6 w-6 dark:brightness-200 dark:invert"
    />
    <a href="https://www.linkedin.com/in/remivaughan/">LinkedIn</a>
  </div>
  <div class="flex flex-row items-center justify-center gap-1">
    <Image
      src={EmailIcon}
      alt="Email Icon"
      width={100}
      height={100}
      class="h-6 w-6 dark:brightness-200 dark:invert"
    />
    <a href={"mailto:" + atob("cmVtaXZhdWdoYW5jb250YWN0QGdtYWlsLmNvbQ==")}>
      Email
    </a>
  </div>
</div>
